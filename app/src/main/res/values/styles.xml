<resources>

    <!-- Base application theme. "@android:style/Theme.Holo"
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBar.widget</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="MyActionBar.widget" parent="@android:style/Theme.Holo.Light">
        <item name="android:popupBackground">@drawable/actionbarmenu_background</item>
    </style>

    <!-- BPM Text Style -->
    <style name="BPMStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/BPMTextSize</item>
    </style>

    <!-- Element BPMList Text Style -->
    <style name="BPMListStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/ElementTextSize</item>
    </style>

    <!-- Edit Dialog Text Style -->
    <style name="EditDialogStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/EditDialogSize</item>
    </style>

    <drawable name="actionbar_background">#263238</drawable>
    <drawable name="actionbarmenu_background">#455a64</drawable>
    <drawable name="application_background">#546e7a</drawable>
    <drawable name="application_border">#37474f</drawable>
    <drawable name="list_background">#90a4ae</drawable>
    <drawable name="text_BPM_foreground">#eceff1</drawable>
    <drawable name="text_list_foreground">#263238</drawable>
</resources>
