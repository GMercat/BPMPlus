<resources>

    <!-- the theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:height">@dimen/bar_height</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <!-- BPM Text Style -->
    <style name="BPMStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/BPMTextSize</item>
    </style>

    <!-- Element BPMList Text Style -->
    <style name="BPMListTitleStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/TitleTextSize</item>
        <item name="android:textColor">@drawable/text_list_element_title_bpm_foreground</item>
    </style>
    <style name="BPMListArtistStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/ArtistTextSize</item>
        <item name="android:textColor">@drawable/text_list_element_artist_foreground</item>
    </style>

    <style name="BPMListElementStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/BPMElementTextSize</item>
    </style>

    <!-- Edit Dialog Text Style -->
    <style name="EditDialogStyle" parent="@android:style/TextAppearance" >
        <item name="android:textSize">@dimen/EditDialogSize</item>
    </style>

    <drawable name="actionbar_background">#1e88e5</drawable>
    <drawable name="application_background">#ffffff</drawable>
    <drawable name="list_background">#ffffff</drawable>
    <drawable name="text_BPM_foreground">#1f1f1f</drawable>
    <drawable name="text_list_element_title_bpm_foreground">#1f1f1f</drawable>
    <drawable name="text_list_element_artist_foreground">#727272</drawable>
    <drawable name="separator_view">#dddddd</drawable>
</resources>
