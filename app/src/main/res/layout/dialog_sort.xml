<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:padding="@dimen/sortDialogPadding">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_creation"
            android:id="@+id/sort_by_creation"
            android:gravity="center_vertical|start|left"
            android:textAppearance="@style/SortDialogStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_title"
            android:id="@+id/sort_by_title"
            android:gravity="center_vertical|start"
            android:textAppearance="@style/SortDialogStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_artist"
            android:id="@+id/sort_by_artist"
            android:gravity="center_vertical|start"
            android:textAppearance="@style/SortDialogStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_bpm"
            android:id="@+id/sort_by_bpm"
            android:gravity="center_vertical|start"
            android:textAppearance="@style/SortDialogStyle" />
    </RadioGroup>

</LinearLayout>